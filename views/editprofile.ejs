<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Fb | Edit Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.7.0/fonts/remixicon.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        body {
            font-family: "Helvetica Neue", Arial, sans-serif;
            background-color: #f8f9fa;
        }
        
        .profile-img {
            width: 90px;
            height: 90px;
            border-radius: 50%;
            overflow: hidden;
        }
        
        .profile-img img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .edit-icon {
            position: absolute;
            top: 20%;
            left: 20%;
            color: royalblue;
            font-size: 2rem;
            cursor: pointer;
        }
    </style>
</head>

<body>

    <div class="container my-5">
        <div class="d-flex align-items-center mb-4">
            <a href="/profile" class="text-decoration-none text-primary fs-4 me-3"><i class="ri-arrow-left-line"></i></a>
            <h3 class="mb-0">Back to profile</h3>
        </div>

        <div class="d-flex gap-4 align-items-center position-relative">
            <div class="profile-img border">
                <img src="/images/uploads/<%= edituser.profile %>" alt="Profile Picture">
            </div>

            <form id="profileform" hidden action="/uploadprofile" method="post" enctype="multipart/form-data">
                <input required id="profileupload" type="file" name="picture">
            </form>

            <i id="editprofile" class="ri-add-circle-fill edit-icon"></i>

            <form action="/saveprofile/<%= edituser.username %>" method="post" class="w-100">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input required name="newname" id="username" value="<%= edituser.username %>" type="text" placeholder="Username" class="form-control">
                </div>
                <div class="mb-3">
                    <label id="editbio" for="bio" class="form-label">Edit Bio</label>
                    <textarea required id="bio" name="bio" class="form-control" rows="3"><%= edituser.bio %></textarea>
                </div>
                <button type="submit" class="btn btn-primary w-100">Save</button>
            </form>
        </div>
    </div>

    <script>
        document.querySelector("#editbio").addEventListener("click", function() {
            document.querySelector("#bio").classList.add("border-dark");
        });

        document.querySelector("#editprofile").addEventListener("click", function() {
            document.querySelector("#profileupload").click();
            document.querySelector("#profileupload").addEventListener("change", function() {
                document.querySelector("#profileform").submit();
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>

</html>