<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>FB | Open Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>

    <div class="homepage d-flex gap-3 fs-4 mx-5 my-4">
        <a id="homepage" href="/homepage"><i class="ri-arrow-left-line "></i></a>
        <p>back </p>
    </div>


    <div class="myprofile d-flex gap-4 mx-5 my-3">
        <div class="left d-flex flex-column gap-2">
            <div class="profile d-flex flex-column ">
                <img src="/images/uploads/<%= openprofile.profile %>" class="card-img-top" alt="">
            </div>



            <%  if(openprofile.followers.indexOf(loginuser._id) === -1){ %>
                <a href="/follow/<%= openprofile._id %>" class="bg-primary px-2  text-decoration-none" style="border: none; color:white;">Follow</a>
                <% }  else{  %>
                    <a href="/follow/<%= openprofile._id %>" class="bg-primary px-2  text-decoration-none" style="border: none; color:white;">unfollow</a>
                    <% }   %>

                        <!-- <a href="/follow/<%= openprofile._id %>"  class="bg-primary px-2  text-decoration-none" style="border: none; color:white;">unfollow</a> -->


                        <!-- <a   class="bg-primary px-2  text-decoration-none" style="border: none; color:white;">unfollow</a> -->
        </div>

        <div class="card-body details mt-1">
            <h5 class="card-title">
                <%= openprofile.username %>
            </h5>
            <p class="card-text mt-1">
                <%= openprofile.bio %>
            </p>

            <div class="posts d-flex gap-2">
                <p style="font-weight: 600;">Posts </p>
                <% if(openprofile.posts.length > 0){ %>
                    <p style="font-weight: 500;">
                        <%= openprofile.posts.length %>
                    </p>
                    <%  }   else { %>
                        <p style="font-weight: 600;">No posts</p>
                        <%   } %>

                            <a style="cursor: pointer;" href="/myfollowers/<%= openprofile._id %>" class="text-decoration-none text-dark ">
                                <p style="font-weight: 600;">Followers</p>
                            </a>
                            <p style="font-weight: 600;">
                                <%= openprofile.followers.length %>
                            </p>

                            <a style="cursor: pointer;" href="/myfollowing/<%= openprofile._id %>" class="text-decoration-none text-dark ">
                                <p style="font-weight: 600;">Following</p>
                            </a>
                            <p style="font-weight: 600;">
                                <%= openprofile.following.length %>
                            </p>
            </div>


        </div>
    </div>


    <div class="allposts d-flex gap-5 mx-5">

        <% openprofile.posts.forEach(function(post){ %>
            <div class="card" style="width: 18rem;">
                <img src="/images/uploads/<%= post.postimage %>" class="card-img-top" alt="retry ">
                <div class="card-body">

                    <div class="likeandcomment d-flex  gap-4">
                        <div class="like d-flex align-items-center gap-1 ">
                            <p class="my-2 fs-5">
                                <%= post.likes.length %>
                            </p>
                            <% if(post.likes.indexOf(openprofile._id) === -1){ %>
                                <a type="submit" href="/like/<%= post._id %>" class="btn text-primary fs-4 ">like</a>
                                <%  }  else{ %>
                                    <a type="submit" href="/like/<%= post._id %>" class="btn text-primary fs-4 ">unlike</a>
                                    <% }  %>

                        </div>

                        <!-- <div class="comment d-flex align-items-center gap-1 ">
                                <p class="my-2 fs-5">0</p>
                                <p class="btn text-primary fs-4 my-2 ">comments</p>
                            </div> -->
                    </div>

                    <p class="card-text my-4">
                        <%= post.postdata %>
                    </p>

                    <%= post.date.toDateString() %>
                </div>

            </div>

            <%  })  %>

    </div>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "gilroy";
        }
        
        html,
        body {
            width: 100%;
            height: 100%;
        }
        
         ::-webkit-scrollbar {
            width: 13px;
            background-color: whitesmoke;
        }
        
         ::-webkit-scrollbar-thumb {
            background-color: royalblue;
            width: 20px;
        }
        
        #homepage {
            text-decoration: none;
        }
        
        .profile {
            width: 65px;
            height: 65px;
            border-radius: 50%;
            overflow: hidden;
            position: relative;
            border: 1px solid black;
        }
        
        .profile img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .allposts {
            flex-wrap: wrap;
        }
    </style>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>

</html>